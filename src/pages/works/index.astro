---
import Layout from "../../layouts/index.astro";
const title = "Works";

// 定義專案資料，根據年份分組
const projectsByYear = {
  "2024": [
    { 
      title: "Vue Stage Play", 
      description: "A component-based package designed to assist you in implementing step-by-step guided tour function within your Vue applications.", 
      image: "/images/vue-stage-play.png",
      codeLink: "https://github.com/user/vue-stage-play" // GitHub 連結
    },
    { 
      title: "Vue Surf", 
      description: "A very customized animated SVG wave Vue component. Adding cool waves to your websites.", 
      image: "/images/vue-surf.png",
      codeLink: "https://github.com/user/vue-surf" // GitHub 連結
    },
  ],
  // 可以根據需要添加更多年份的專案
};

const currentYear = new Date().getFullYear(); // 獲取當前年份
---

<Layout
  title={title}
  centerContent={false}
  extraBodyClasses="pt-24 overflow-scroll"
>
  <div class="h-full dark:text-[#bbb] max-w-[900px] mx-auto">
    <!-- 生成當前年份及其專案 -->
    {
      Object.entries(projectsByYear).map(([year, projects]) => (
        <div class="mb-12">
          <h2 class="text-4xl font-bold mb-4">{year}</h2>
          <div class="flex flex-wrap justify-between gap-8">
            {projects.map((project) => (
              <div class="w-full md:w-[48%] bg-gray-800 p-4 rounded-lg">
                <img src={project.image} alt={project.title} class="mb-4 w-full h-auto rounded-lg" />
                <h3 class="text-2xl font-semibold mb-2">{project.title}</h3>
                <p class="mb-4">{project.description}</p>
                <!-- GitHub 連結圖標 -->
                <a href={project.codeLink} target="_blank" rel="noopener noreferrer" class="inline-block">
                  <svg
                    width="18px"
                    height="18px"
                    stroke-width="2"
                    viewBox="0 0 24 24"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                    class="inline-block text-black dark:text-gray-400 hover:dark:text-white"
                    stroke="currentColor"
                  >
                    <path
                      d="M16 22.0268V19.1568C16.0375 18.68 15.9731 18.2006 15.811 17.7506C15.6489 17.3006 15.3929 16.8902 15.06 16.5468C18.2 16.1968 21.5 15.0068 21.5 9.54679C21.4997 8.15062 20.9627 6.80799 20 5.79679C20.4558 4.5753 20.4236 3.22514 19.91 2.02679C19.91 2.02679 18.73 1.67679 16 3.50679C13.708 2.88561 11.292 2.88561 8.99999 3.50679C6.26999 1.67679 5.08999 2.02679 5.08999 2.02679C4.57636 3.22514 4.54413 4.5753 4.99999 5.79679C4.03011 6.81549 3.49251 8.17026 3.49999 9.57679C3.49999 14.9968 6.79998 16.1868 9.93998 16.5768C9.61098 16.9168 9.35725 17.3222 9.19529 17.7667C9.03334 18.2112 8.96679 18.6849 8.99999 19.1568V22.0268"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                    <path
                      d="M9 20.0267C6 20.9999 3.5 20.0267 2 17.0267"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                </a>
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</Layout>
