---
import Layout from "@/layouts/index.astro";
const title = "Blog";

// 使用 `await` 拿到的 Markdown 文章列表
const posts = await Astro.glob("../posts/*.md");
---

<Layout title={title}>
  <div class="container mx-auto px-4 py-8 dark:text-[#bbb]">
    <h2 class="text-4xl font-bold">Blog</h2>
    <p class="mt-4 text-lg">
      Welcome to our Blog page. Here are our latest posts:
    </p>

    <ul class="mt-8 space-y-4">
      {
        posts.map((post) => (
          <li>
            <a href={post.url} class="text-2xl font-semibold hover:underline">
              {post.frontmatter.title}
            </a>
            <p class="text-gray-600 dark:text-gray-400">
              {post.frontmatter.date}
            </p>
          </li>
        ))
      }
    </ul>
  </div>
</Layout>
